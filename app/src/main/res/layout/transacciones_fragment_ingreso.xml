<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Transacciones.transacciones_fragment_ingreso"
    android:background="@color/colorForeBlanco">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <!--BOTONERA-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageButton
                    android:id="@+id/btnCloseTransacciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnrecyclerview"
                    android:src="@drawable/ic_action_close" />

                <Button
                    android:id="@+id/btnGuardarTransacciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/btnrecyclerview"
                    android:text="@string/transacciones_boton_grabar"
                    android:textColor="@color/colorForeFiltro"
                    app:layout_constraintEnd_toEndOf="parent" />

            </RelativeLayout>

            <!-- *************************** -->
            <!-- INGRESAR FECHA -->
            <!-- ENCABEZADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/filtro_grosor_de_linea"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/separador" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/transacciones_campo_fecha"
                    android:textColor="@color/colorForeFiltro"
                    android:textSize="10sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/filtro_grosor_de_linea"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/separador" />

            </LinearLayout>
            <!-- *************************** -->
            <!-- INGRESAR FECHA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btnFechaTransacciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btnrecyclerview"
                    android:textColor="@color/colorForeFiltro"
                    android:textSize="12sp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <!-- *************************** -->
            <!-- INGRESAR CUENTA ORIGEN-->
            <!-- ENCABEZADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/filtro_grosor_de_linea"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/separador" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/transacciones_campo_cuentaorigen"
                    android:textColor="@color/colorForeFiltro"
                    android:textSize="10sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/filtro_grosor_de_linea"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/separador" />

            </LinearLayout>
            <!-- *************************** -->
            <!-- INGRESAR CUENTA ORIGEN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/cboCuentaOrigen"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    style="@style/miSpinner">

                </Spinner>

            </LinearLayout>

            <!-- *************************** -->
            <!-- INGRESAR CUENTA DESTINO-->
            <!-- ENCABEZADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/filtro_grosor_de_linea"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/separador" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/transacciones_campo_cuentadestino"
                    android:textColor="@color/colorForeFiltro"
                    android:textSize="10sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/filtro_grosor_de_linea"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/separador" />

            </LinearLayout>
            <!-- *************************** -->
            <!-- INGRESAR CUENTA DESTINO-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/cboCuentaDestino"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    style="@style/miSpinner">

                </Spinner>

            </LinearLayout>

            <!-- *************************** -->
            <!-- INGRESAR MONTO -->
            <!-- ENCABEZADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/filtro_grosor_de_linea"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/separador" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/transacciones_campo_monto"
                    android:textColor="@color/colorForeFiltro"
                    android:textSize="10sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/filtro_grosor_de_linea"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/separador" />

            </LinearLayout>
            <!-- *************************** -->
            <!-- INGRESAR MONTO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:id="@+id/txtMontoTransaccion"/>


            </LinearLayout>

            <!-- *************************** -->
            <!-- INGRESAR DESCRIPCION -->
            <!-- ENCABEZADO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/filtro_grosor_de_linea"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/separador" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/transacciones_campo_descripcion"
                    android:textColor="@color/colorForeFiltro"
                    android:textSize="10sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/filtro_grosor_de_linea"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/separador" />

            </LinearLayout>
            <!-- *************************** -->
            <!-- INGRESAR DESCRIPCION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:inputType="textMultiLine"
                    android:textSize="12sp"
                    android:id="@+id/txtDescripcionTransaccion"/>

            </LinearLayout>

        </LinearLayout>

</FrameLayout>